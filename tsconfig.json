{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "types": ["webpack-env", "node", "jest"],
    "baseUrl": "./",
    "paths": {
      // "@types/*": ["@types/*"]
      "@/*": ["./*", "./"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "./dist_server"
  },
  "include": [
    "server/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "client/*.vue",
    "client/**/*.vue",
    "tests/**/*.ts",
    "tests/*.js",
    "tests/**/*.tsx",
    "./*.js",
    ".eslintrc.js",
    ".prettierrc.js"
  ],
  "exclude": ["node_modules"]
}
