{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["webpack-env", "node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "outDir": "./dist_server"
  },
  "include": [
    "server/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.vue",
    // "client/*/*.vue",
    // "client/*.ts",
    "**/*.vue",
    "tests/**/*.ts",
    "tests/*.js",
    "tests/**/*.tsx",
    "./*.js",
    ".eslintrc.js",
    ".prettierrc.js"
  ],
  "exclude": ["node_modules"]
}
